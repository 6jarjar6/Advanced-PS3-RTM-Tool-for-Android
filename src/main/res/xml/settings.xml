<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  
	<PreferenceCategory
		android:title="Setup">
		<EditTextPreference
			android:key="ip"
			android:title="PS3 IP"
			android:summary="Your Local Network PS3 IP Address must be provided for connection to WebMan Mod"
			android:dialogTitle="Enter Your PS3 IP" 
			android:defaultValue="192.168.0.0"/>
		
	</PreferenceCategory>
	
	
  <PreferenceCategory
	android:title="Customize">
	
	<SwitchPreference
	  android:key="fullscreen"
	  android:title="Fullscreen"
	  android:summary="Hide the status bar and fill the whole screen" 
	  android:defaultValue="false" />
  
	  <SwitchPreference
		  android:key="audio"
		  android:title="Audio Feedback"
		  android:summary="Use Audio response from the PS3" 
		  android:defaultValue="false" />
	  

  </PreferenceCategory>
  <PreferenceCategory
		  android:title="Extra's">
		  
	<PreferenceScreen
	  android:title="Install Hybrid Firmware"
	  android:summary="A guide to help install WebMan via HFW on Any PS3 System">
	  <intent android:action="android.intent.action.VIEW"
		  android:data="https://m.youtube.com/watch?v=RIo3uESXUV8" />

	</PreferenceScreen>
  </PreferenceCategory>

  	


