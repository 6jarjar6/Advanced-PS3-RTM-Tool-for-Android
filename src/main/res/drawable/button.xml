<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
		<shape>
			<gradient 
				android:startColor="#61B9EB" 
				android:endColor="#565656" 
				android:angle="270" />

			<shadow 
				android:width="2dp" 
				android:color="#FBFBFB" />
			<corners 
				android:radius="10dp" />

		</shape>
	</item>
	<item android:state_pressed="false" >
		<shape>
			<gradient 
				android:startColor="#61B9EB" 
				android:endColor="#565656" 
				android:angle="270" />
			<corners 
				android:radius="15dp" />
		</shape>
	</item>
</selector>
